@import '../globals'


.titulo
  margin-bottom .8em

.bajada
  font 1.3em condensed
  color grisMedio

  p
    margin-bottom: 1.2em

  .talleres
    .donde 
      font-size 1.2em

    li
      margin-bottom: .5em

img#foto
  size: 100%

.row.taller
  margin-vertical 0em

  .col-xs-12
    margin-vertical 2em 0em


.datos
  .recuadro.center
    font-size 1.5em
    padding-vertical 1em
    box-sizing border-box
    height 6.5em
    width 75%

  p
    text-align center
    font-size 1.5em
    color grisMedio
    margin-left .25em
    margin-bottom .1em

  p.cuando
    color celeste
    font-size 1.6em

  p.direccion
    font-size 1.4em

  @media (max-width: 992px)
    width 80%
    font 1.8em condensed


.map
  height 20em
