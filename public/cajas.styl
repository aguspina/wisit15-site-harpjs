celeste = #5C90BF
azul = #3c5e7d
grisOscuro = #222221
grisMedio = #5b5b5f

.boton
  font 1.4em condensed
  padding 0em 1em
  margin .5em
  background-color white
  border-radius .75em
  text-transform uppercase
  shadow .25em
  color: azul

.caja
  text-align center
  margin-top: 18px
  
  h1
    font-size 26px
    @media (max-width: 992px) 
      font-size 32px
      margin-top 16px

    padding 4px 7px
    color white
    text-transform uppercase
    display inline-block
    background-color black
    shadow 7px
    margin-bottom  0px
    margin-top 0px
    position relative
    z-index -1

.info
  padding-bottom 10px
  overflow hidden
  color white
  background-color celeste
  shadow 7px
  position:relative

  hr
    background-color: white;

  h2
    margin-top 10px
    font-size 36px

  h3 
    text-transform uppercase
    font-size 26px

  h4
    font-size 20px

  p
    font 18px condensed
    text-align justify
    margin-top 28px
    margin-left 10px
    margin-right 10px
    font-family 'Open Sans'

  a
    @extend .boton

  .botones
    width: 100%
