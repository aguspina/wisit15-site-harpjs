@import 'cajas'

padding-vertical(distance)
  padding-top distance
  padding-bottom distance

margin-vertical(distance)
  margin-top distance
  margin-bottom distance

margin-horizontal(distance)
  margin-left distance
  margin-right distance


@import '_shared/navbar/navbar'

body 
  padding-top 70px
  font-family 'Open Sans Condensed', sans-serif

  .container
    max-width 960px

shadow(distance)
  horizontal_shadow = distance * 0.5
  vertical_shadow = distance * 0.866
  -webkit-box-shadow horizontal_shadow vertical_shadow 0px 0px rgba(0, 0, 0, 0.35)
  -moz-box-shadow horizontal_shadow vertical_shadow 0px 0px rgba(0, 0, 0, 0.35)
  box-shadow horizontal_shadow vertical_shadow 0px 0px rgba(0, 0, 0, 0.35)

.center
  display: block;
  box-sizing: content-box;
  margin-left: auto;
  margin-right: auto;

.col-md-offset-15
  margin-left 12.5%
