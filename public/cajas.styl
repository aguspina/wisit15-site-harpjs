celeste = #5C90BF
azul = #3c5e7d
grisOscuro = #222221
grisMedio = #5b5b5f

.boton
  font 1.4em condensed
  padding 0em 1em
  margin .5em
  background-color white
  border-radius .75em
  text-transform uppercase
  shadow .25em
  color: azul

.caja
  text-align center
  margin-top: 18px
  
  h1
    font-size 22px
    padding 3px 5px
    color white
    text-transform uppercase
    display inline-block
    background-color black
    shadow 7px
    margin-bottom  0px
    margin-top 0px
    position relative
    z-index -1

.caja_home
  min-height 286px

.caja_propone
  min-height 200px

.info
  padding-bottom 10px
  overflow hidden
  color white
  background-color celeste
  shadow 7px
  position:relative

  hr
    background-color: white;

  h2
    margin-top 10px
    font-size 36px

  h3 
    text-transform uppercase
    font-size 26px

  h4
    font-size 20px

  p
    font-size 14px
    text-align justify
    margin-top 28px
    margin-left 10px
    margin-right 10px
    font-family 'Open Sans'

  a
    @extend .boton

  .botones
    position: absolute
    bottom: 20px
    width: 100%

.vcenter-container {
  position relative
  height 238px
}

.vcenter-contents {
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)
  width: 100%
}
